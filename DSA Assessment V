import java.util.Scanner;

public class Main {
    private int[] queue;
    private int front, rear, size, max;

    public Main(int size) {
        this.max = size;
        queue = new int[max];
        front = 0;
        rear = -1;
        size = 0;
    }

    public void enqueue(int data) {
        if (size == max) {
            System.out.println("Queue Overflow: Cannot insert " + data);
        } else {
            rear = (rear + 1) % max;
            queue[rear] = data;
            size++;
            System.out.println(data + " inserted into queue.");
        }
        displayQueue();
    }

    public void dequeue() {
        if (size == 0) {
            System.out.println("Queue Underflow: Cannot dequeue.");
        } else {
            System.out.println(queue[front] + " removed from queue.");
            front = (front + 1) % max;
            size--;
        }
        displayQueue();
    }

    public void peek() {
        if (size == 0) {
            System.out.println("Queue is empty.");
        } else {
            System.out.println("Front element is " + queue[front]);
        }
        displayQueue();
    }

    public void displayQueue() {
        if (size == 0) {
            System.out.println("Queue is empty.");
        } else {
            System.out.print("Current Queue: ");
            for (int i = 0; i < size; i++) {
                System.out.print(queue[(front + i) % max] + " ");
            }
            System.out.println();
        }
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter size of Circular Queue: ");
        int size = scanner.nextInt();
        Main cq = new Main(size);

        while (true) {
            System.out.println("\nCircular Queue Operations Menu:");
            System.out.println("1. Enqueue");
            System.out.println("2. Dequeue");
            System.out.println("3. Peek");
            System.out.println("4. Exit");
            System.out.print("Choose an option (1-4): ");
            int choice = scanner.nextInt();

            switch (choice) {
                case 1:
                    System.out.print("Enter data to enqueue: ");
                    cq.enqueue(scanner.nextInt());
                    break;
                case 2:
                    cq.dequeue();
                    break;
                case 3:
                    cq.peek();
                    break;
                case 4:
                    System.out.println("Exiting program...");
                    scanner.close();
                    return;
                default:
                    System.out.println("Invalid choice. Choose between 1-4.");
            }
        }
    }
}

